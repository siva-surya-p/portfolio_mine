# Optimize npm for CI/CD
engine-strict=true
prefer-offline=true
prefer-fetch=true
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
# Use the latest npm
engine-strict=true
# Disable package-lock.json as we're using package-lock.json
package-lock=false
# Prefer exact versions
save-exact=true
# Disable package-lock on CI
ci-install-failure-output=true
